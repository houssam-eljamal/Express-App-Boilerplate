{{#if success_msg}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="alert alert-success">{{success_msg}}</div>
    </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="alert alert-danger">{{error_msg}}</div>
    </div>
</div>
{{/if}}